<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>URL Shortener</title>

  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

  <style>
    body {
      margin: 0;
      font-family: 'Poppins', sans-serif;
      background: black;
      color: white;
      min-height: 100vh;
      overflow-x: hidden;
    }

    /* Stars */
    .stars {
      position: fixed;
      width: 100%;
      height: 100%;
      z-index: -1;
    }

    .star {
      position: absolute;
      width: 2px;
      height: 2px;
      background: white;
      border-radius: 50%;
      animation: twinkle 3s infinite;
    }

    @keyframes twinkle {
      0%, 100% { opacity: 0.2; }
      50% { opacity: 1; }
    }

    h1 {
      text-align: center;
      color: #00ffff;
      text-shadow: 0 0 15px #00ffff;
    }

    .card {
      max-width: 900px;
      margin: 40px auto;
      padding: 30px;
      background: rgba(255,255,255,0.05);
      border-radius: 12px;
      backdrop-filter: blur(10px);
      box-shadow: 0 0 30px rgba(0,255,255,0.2);
    }

    form {
      display: flex;
      gap: 10px;
      justify-content: center;
      margin-bottom: 20px;
    }

    input {
      flex: 1;
      padding: 12px;
      border-radius: 6px;
      border: none;
      background: rgba(255,255,255,0.1);
      color: white;
    }

    button {
      padding: 12px 20px;
      border-radius: 6px;
      border: none;
      cursor: pointer;
      font-weight: bold;
      background: linear-gradient(90deg, #00ffff, #ff00ff);
      color: white;
      box-shadow: 0 0 15px #00ffff, 0 0 30px #ff00ff;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th, td {
      padding: 10px;
      text-align: center;
      border-bottom: 1px solid rgba(255,255,255,0.2);
    }

    th {
      color: #00ffff;
    }

    .generated {
      text-align: center;
      margin-bottom: 20px;
      color: #00ff99;
    }
  </style>
</head>

<body>
  <div class="stars" id="stars"></div>

  <div class="card">
    <h1> URL Shortener </h1>

    <% if (locals.id) { %>
      <p class="generated">
        Short URL: http://localhost:8001/url/<%= id %>
      </p>
    <% } %>

    <form method="POST" action="/url">
      <input type="text" name="url" placeholder="https://example.com" required />
      <button type="submit">Generate</button>
    </form>

    <% if (locals.urls) { %>
    <table>
      <thead>
        <tr>
          <th>#</th>
          <th>Short ID</th>
          <th>Original URL</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% urls.forEach((url, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= url.shortId %></td>
<td class="redirect">
  <a href="<%= url.redirectURL %>" target="_blank">
    <%= url.redirectURL %>
  </a>
</td>
          <td><%= url.visitHistory.length %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } %>
  </div>

  <script>
    const stars = document.getElementById("stars");
    for (let i = 0; i < 120; i++) {
      const s = document.createElement("div");
      s.className = "star";
      s.style.top = Math.random() * 100 + "%";
      s.style.left = Math.random() * 100 + "%";
      s.style.animationDuration = Math.random() * 3 + 2 + "s";
      stars.appendChild(s);
    }
  </script>
</body>
</html>
